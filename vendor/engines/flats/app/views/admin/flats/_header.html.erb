<li class='clearfix record <%= cycle("on", "on-hover") %>' style="font-weight: bold;">
  <span class='title'>
    <%= t(".name") %>
    <span class="preview">&nbsp;</span>
  </span>
  <span>
    <%= select :target_floor, :id, TargetFloor.all.map{|t| [t.name, t.id] }.unshift(["Все", nil]), {},
        {:onchange => "window.location.pathname= this.value ? '/refinery/target_floors/'+this.value+'/floors' : '/refinery/floors'"} -%>
    <span class="preview">&nbsp;</span>
  </span>

  <span class='actions'>
    <%= t('.actions') %>&nbsp;&nbsp;&nbsp;&nbsp;
  </span>
</li>

