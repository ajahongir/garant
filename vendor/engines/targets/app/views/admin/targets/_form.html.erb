<%= form_for [:admin, @target], :html=> {:multipart=>true} do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @target,
          :include_object_name => true
        } %>

  <div class='field'>
    <%= f.label t(".name") -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label t('.address') -%>
    <%= f.text_field :address, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label t(".localition") -%>
    <%= f.text_field :localition, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:description].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to part.to_s.titleize, "##{part}" %>
          </li>
        <% end %>
      </ul>

      <div id='page_part_editors'>
        <% [:description].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class='field'>
    <%= f.label t('.photo') -%>
    <%= select(:target, :photo, Image.all.map{|i| [i.image_name, i.image_uid] }, :class => 'larger widest') -%>
  </div>

  <div class='field'>
    <%= f.label t('.date_start') -%>
    <%= select_date @target.date_start, :prefix => "target[date_start]", :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label t('.date_end') -%>
    <%= select_date @target.date_end, :prefix => "target[date_end]", :class => 'larger widest' -%>
  </div>

  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.targets.target'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @target.name)
              } %>
<% end -%>

</script>

