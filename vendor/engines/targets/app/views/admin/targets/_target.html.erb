<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(target) -%>">
  <span class='title'>
    <%= target.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), target_path(target),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_target_path(target),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_target_path(target),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => target.name),
        :method => :delete %>
    <%= link_to image_tag("target.png"), new_admin_target_target_floor_path(target),
        :title => "Добавить этаж" %>
  </span>
</li>
