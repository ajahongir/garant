<div class="target">
  <table>
    <tr>
      <td style="width: 350px;">
        <image src='/system/images/<%= @target.photo %>' alt="<%= @target.name %>">
      </td>
      <td valign="top">
        <h1>
          <%= @target.name %>
        </h1>
        <p>
          <%= raw @target.description %>
        </p>
      </td>
    </tr>
  </table>
  <div style="height: 200px; margin: 0px 50px;" id="map_canvas"></div>
  <br/>
  <div class="progress">
    <div>
      <h1 class="caption">Стадия строительства</h1>
    </div>
    <div></div>
  </div>

  <% content_for :body_content_title do %>
    <%= @target.name %>
  <% end %>


  <% content_for :body_content_left do %>
    <% @target.recent_events.each do |event| %>
      <hr/>
      <section>
        <h1><%= event.name %></h1>
        <p><%= event.created_at %></p>
        <p>
          <%= raw event.description %>
        </p>
      </section>
    <% end %>
  <% end %>

  <% content_for :body_content_right do %>
    <aside>
        <div style="heigth: 200px;">
          <div>
            <ul id="mycarousel" class="jcarousel-skin-tango" style="heigth: 200px;">
              <li>
                <img src="/images/building1.png" width="170px;" alt="" />
