              </li>
              <li>
                <img src="/images/building2.png" width="170px;" alt="" />
                <a href="#">г.Севастополь, ул. Ерошенко 9</a>
              </li>
              <li>
                <img src="/images/building3.png" width="170px;" alt="" />
                <a href="#">г. Севастополь, ул. Льва Толстого, 16</a>
              </li>
              <li>
                <img src="/images/building1.png" width="170px;" alt="" />
                <a href="#">г.Севастополь, ул. Ерошенко 9</a>
              </li>
              <li>
                <img src="/images/building3.png" width="170px;" alt="" />
                <a href="#">г.Севастополь, ул. Ерошенко 9</a>
              </li>
              <li>
                <img src="/images/building2.png" width="170px;" alt="" />
                <a href="#">г. Севастополь, ул. Льва Толстого, 16</a>
              </li>
            </ul>
          </div>
        </div>

      <h2><%= t('.other') %></h2>
      <ul id="targets">
        <% @targets.each do |target| %>
          <li>
            <%= link_to target.name, target_path(target) %>
          </li>
        <% end %>
      </ul>
    </aside>
  <% end %>
  <%= render :partial => "/shared/content_page" %>
  <hr/>
</div>

