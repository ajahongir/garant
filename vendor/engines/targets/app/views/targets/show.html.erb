<% content_for :body_content_title do %>
  <%= @target.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @target.name %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @target.title %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="targets">
      <% @targets.each do |target| %>
        <li>
          <%= link_to target.name, target_path(target) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
