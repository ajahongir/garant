<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(event_image) -%>">
  <span class='title'>
    <%= event_image.event.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='title'>
    <%= event_image.data %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), event_image_path(event_image),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_event_image_path(event_image),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_event_image_path(event_image),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => event_image.data),
        :method => :delete %>
  </span>
</li>

